<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="40dp">

   <View
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="#E0E0E0"
        android:id="@+id/right_item"
        android:layout_height="8dp"/>
    <View
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="#E0E0E0"
        android:id="@+id/left_item"
        android:layout_height="8dp"/>



    <com.github.pavlospt.CircleView
        android:id="@+id/main_item"

        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        app:cv_titleText="365"
        app:cv_subtitleText="12/10/17"
        app:cv_titleSize="8dp"
        app:cv_subtitleSize="2dp"
        app:cv_fillColor="#E0E0E0"
        app:cv_titleColor="#BDBDBD"
        app:cv_subtitleColor="#BDBDBD"
        app:cv_strokeColorValue="#E0E0E0"
       />





</RelativeLayout>